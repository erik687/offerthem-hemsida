---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Webbplatskarta - OffertHem" description="Översikt över alla sidor på OffertHem.se">
    <div class="max-w-4xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-extrabold text-gray-900 mb-8">Webbplatskarta</h1>
        <div class="grid md:grid-cols-2 gap-8">
            <div>
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Huvudsidor</h2>
                <ul class="space-y-2 text-lg">
                    <li><a href="/" class="text-primary hover:underline">Startsida</a></li>
                    <li><a href="/tjanster" class="text-primary hover:underline">Våra tjänster</a></li>
                    <li><a href="/jamfor-maklare" class="text-primary hover:underline">Jämför mäklare</a></li>
                    <li><a href="/jamfor-maklararvoden" class="text-primary hover:underline">Jämför mäklararvoden</a></li>
                    <li><a href="/jamfor-lan" class="text-primary hover:underline">Jämför lån</a></li>
                    <li><a href="/blog" class="text-primary hover:underline">Nyheter</a></li>
                </ul>
            </div>
            <div>
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Information</h2>
                <ul class="space-y-2 text-lg">
                    <li><a href="/om-oss" class="text-primary hover:underline">Om oss</a></li>
                    <li><a href="/kontakta-oss" class="text-primary hover:underline">Kontakta oss</a></li>
                    <li><a href="/dataskydd" class="text-primary hover:underline">Dataskyddspolicy</a></li>
                    <li><a href="/anvandarvillkor" class="text-primary hover:underline">Användarvillkor</a></li>
                </ul>
            </div>
            <div>
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Städer</h2>
                <ul class="space-y-2 text-lg">
                    <li><a href="/jamfor-maklare/stockholm" class="text-primary hover:underline">Mäklare Stockholm</a></li>
                    <li><a href="/jamfor-maklare/goteborg" class="text-primary hover:underline">Mäklare Göteborg</a></li>
                    <li><a href="/jamfor-maklare/malmo" class="text-primary hover:underline">Mäklare Malmö</a></li>
                    <li><a href="/jamfor-maklare/uppsala" class="text-primary hover:underline">Mäklare Uppsala</a></li>
                </ul>
            </div>
        </div>
    </div>
</Layout>
