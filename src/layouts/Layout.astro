---
import '../styles/global.css';
import Header from '../components/Header.astro';

import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
	heroImage?: string;
}

const { title, description = "Jämför mäklare och hitta rätt för din bostadsförsäljning", heroImage } = Astro.props;
---

<!doctype html>
<html lang="sv">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Work+Sans:wght@600&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title} | OffertHem</title>
        {heroImage && <meta property="og:image" content={heroImage} />}
	</head>
	<body class="bg-gray-50 text-gray-900 antialiased flex flex-col min-h-screen">
        <Header />
		<div class="flex-grow">
			<slot />
		</div>
        <Footer />
	</body>
</html>
